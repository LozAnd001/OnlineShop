@model List<ProductViewModel>
 @{
    ViewData["Title"] = "Home Page";
 }
 <div class="row">
     @foreach(var product in Model)
     {
         <div class = col-3 card shadow>
             <img class="card-img-top" src = "@product.ImagePath" alt="Изображение товара"/>
             <div class="card-body">
                 <a style="color:black" href="/product/index/@product.Id">
                     <h5>@product.Name</h5>
                     
                 </a>
                 <h5>@product.Cost руб</h5>
                 <h5>@product.Id руб</h5>
                 <a class="btn btn-dark" href="/cart/add?productId=@product.Id" role="button">Добавить в корзину</a>
                 <a class="btn btn-success" 
                     asp-area="" 
                     asp-controller="Favorite" 
                     asp-action="Add" 
                     asp-route-productId="@product.Id" 
                     role="button">Добавить в избранное
                </a>
             </div>
         </div>
     }
 </div>